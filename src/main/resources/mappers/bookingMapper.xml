<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quiz.lesson07.dao.BookingDAO">
	<select id="selectBookingList" resultType="com.quiz.lesson07.model.Booking">
		SELECT
			`id`
			,`name`
			,`headcount`
			,`day`
			,`date`
			,`phoneNumber`
			,`state`
			,`createdAt`
			,`updatedAt`
		FROM
			`booking`
	</select>
	<delete id="deleteBookingById">
		DELETE
		FROM
			`booking`
		WHERE
			`id` = #{id}
	</delete>
	<insert id="addBooking" parameterType="map">
		INSERT INTO `booking`
			(
			`name`
			,`date`
			,`day`
			,`headcount`
			,`phoneNumber`
			,`createdAt`
			,`updatedAt`
			)
		VALUES
			(
			#{name}
			,#{date}
			,#{day}
			,#{headcount}
			,#{phoneNumber}
			,NOW()
			,NOW()
			)
	</insert>
	<select id="selectBookingListByName" parameterType="map" resultType="com.quiz.lesson07.model.Booking">
		SELECT
			`name`
			,`date`
			,`headcount`
			,`day`
			,`state`
		FROM
			`booking`
		WHERE
			`name` = #{name} and `phoneNumber`= #{phoneNumber}
	</select>
</mapper>