<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.quiz.lesson05.dao.WeatherHistoryDAO">
 	<select id="selectWeather" resultType="com.quiz.lesson05.model.WeatherHistory">
 		SELECT
 			`id`
 			,`date`
 			,`weather`
 			,`temperatures`
 			,`preciptitation`
 			,`microDust`
 			,`windSpeed`
 			,`createdAt`
 			,`updatedAt`
 		from
 			`weatherhistory`
 	</select>
 	
 	<insert id="addWeather" parameterType="map">
 		INSERT INTO `weatherhistory`
 		(
 			`date`
 			,`weather`
 			,`temperatures`
 			,`preciptitation`
 			,`microDust`
 			,`windSpeed`
 			,`createdAt`
 			,`updatedAt`
 		)
 		VALUES
 		(
 			#{date}
 			,#{weather}
 			,#{temperature}
 			,#{preciptitation}
 			,#{microDust}
 			,#{windSpeed}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	
 </mapper>